{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}